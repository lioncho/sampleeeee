<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

       <style name="button_left">
        <item name="android:background">@drawable/style_button_left</item>
        <item name="android:textColor">@drawable/selector_button_color</item>
        <!-- 
        <item name="android:textSize">16sp</item>
         -->
         <item name="android:padding">10dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
       <style name="button_right">
        <item name="android:background">@drawable/style_button_right</item>
        <item name="android:textColor">@drawable/selector_button_color</item>
        <!-- 
        <item name="android:textSize">16sp</item>
         -->
         <item name="android:padding">10dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
       <style name="button_normal">
        <item name="android:background">@drawable/style_button_normal</item>
        <item name="android:textColor">@drawable/selector_button_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
       <style name="button_round">
        <item name="android:background">@drawable/style_button_round</item>
        <item name="android:textColor">@drawable/selector_button_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
